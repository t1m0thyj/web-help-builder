{
  "name": "web-help-builder",
  "version": "1.0.0",
  "description": "Tools for building and developing Zowe CLI web help",
  "main": "index.js",
  "scripts": {
    "build": "ts-node src/build-web-help.ts",
    "build:bright": "sed -i 's|cliPackage:.*|cliPackage: \"@brightside/core\"|' config.yaml && npm run build",
    "build:zowe": "sed -i 's|cliPackage:.*|cliPackage: \"@zowe/cli\"|' config.yaml && npm run build",
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "ts-node src/watch-web-help.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjohnsonBCM/web-help-builder.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tjohnsonBCM/web-help-builder/issues"
  },
  "homepage": "https://github.com/tjohnsonBCM/web-help-builder#readme",
  "devDependencies": {
    "@types/node": "^12.7.4",
    "cpx": "^1.5.0",
    "global-prefix": "^3.0.0",
    "imperative-latest": "npm:@zowe/imperative@^4.3.2",
    "js-yaml": "^3.13.1",
    "rimraf": "^3.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  }
}
